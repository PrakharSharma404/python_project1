pipeline {
    agent {
        docker {
            image 'my-python-docker-agent'
            args '-v /var/run/docker.sock:/var/run/docker.sock'
        }
    }

    environment {
        DOCKER_IMAGE_NAME = 'calculator'
        GITHUB_REPO_URL = 'https://github.com/PrakharSharma404/python_project1'
        // THIS IS THE FIX: Tell Docker where to write its config files
        DOCKER_CONFIG = '/var/jenkins_home/workspace/python-calculator-pipeline/.docker'
    }

    stages {
        stage('Checkout') {
            steps {
                cleanWs()
                git branch: 'main', url: "${GITHUB_REPO_URL}"
            }
        }

        stage('Run Python Tests') {
            steps {
                sh 'python3 -m unittest test.py'
            }
        }

        stage('Build Docker Image') {
            steps {
                // Create the writable directory for Docker config
                sh 'mkdir -p $DOCKER_CONFIG'
                sh "docker build -t ${DOCKER_IMAGE_NAME} ."
            }
        }

        stage('Push Docker Images') {
            steps {
                echo "Skipping Docker push for now."
            }
        }
    }
}