pipeline {
    agent any
    triggers {
        githubPush()
    }
    environment {
        DOCKER_IMAGE_NAME = 'calculator'
        // UPDATED GITHUB REPO URL
        GITHUB_REPO_URL = 'https://github.com/PrakharSharma404/python_project1'
    }

    stages {
        stage('Checkout') {
            steps {
                script {

                    // Checkout the code from the GitHub repository
                    git branch: 'main', url: "${GITHUB_REPO_URL}"
                }
            }
        }

        stage('Run Python Tests') {

            steps {
                script {
                    // Run Python unit tests using unittest
                    sh 'python3 -m unittest test.py'
                }

            }
        }

        stage('Build Docker Image') {
            steps {
                script {
                    // Build Docker image
                    docker.build("${DOCKER_IMAGE_NAME}", '.')

                }
            }
        }

        stage('Push Docker Images') {
            steps {
                script {
                    // NOTE: Change 'prakharsharma404' to your Docker Hub username
                    docker.withRegistry('', 'DockerHubCred') {

                        sh 'docker tag $DOCKER_IMAGE_NAME prakharsharma404/$DOCKER_IMAGE_NAME:latest'
                        sh 'docker push prakharsharma404/$DOCKER_IMAGE_NAME'
                    }
                }
            }

        }

        stage('Run Ansible Playbook') {
            steps {
                script {
                    ansiblePlaybook(
                        playbook: 'deploy.yml',

                        inventory: 'inventory'
                    )
                }
            }
        }
    }
}